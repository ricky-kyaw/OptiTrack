<Window x:Class="OptiTrack.App.UI.general.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OptiTrack.App.UI.general"
        mc:Ignorable="d"
        Title="LoginPage" Height="450" Width="800">
    <Window.Resources>
        <!-- Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#2C3E50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Padding" Value="0,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#34495E"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="2"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- PasswordBox Style -->
        <Style x:Key="ModernPasswordBox" TargetType="PasswordBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="2"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Radio Button Style -->
        <Style x:Key="AccountTypeRadioButton" TargetType="RadioButton">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,0,20,0"/>
        </Style>
    </Window.Resources>

    <Grid>
        <StackPanel HorizontalAlignment="Center" 
                    VerticalAlignment="Center" 
                    Width="300">

            <!-- Logo/Title Section -->
            <TextBlock Text="OptiTrack" 
                       FontSize="32" 
                       FontWeight="Bold" 
                       Foreground="#2C3E50"
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,8"/>

            <TextBlock Text="Employee Attendance System" 
                       FontSize="12" 
                       Foreground="#7F8C8D"
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,40"/>

            <!-- Account Type Selection -->
            <TextBlock Text="Account Type" 
                       FontSize="13" 
                       Foreground="#2C3E50"
                       Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        Margin="0,0,0,25">
                <RadioButton x:Name="EmployeeRadioButton"
                            Content="Employee" 
                            GroupName="AccountType"
                            Style="{StaticResource AccountTypeRadioButton}"
                            IsChecked="True"/>
                <RadioButton x:Name="AdminRadioButton"
                            Content="Admin" 
                            GroupName="AccountType"
                            Style="{StaticResource AccountTypeRadioButton}"/>
            </StackPanel>

            <!-- Username Field -->
            <TextBlock Text="Username" 
                       FontSize="13" 
                       Foreground="#2C3E50"
                       Margin="0,0,0,6"/>

            <TextBox x:Name="UsernameTextBox"
                     Style="{StaticResource ModernTextBox}"
                     Margin="0,0,0,20"/>

            <!-- Password Field -->
            <TextBlock Text="Password" 
                       FontSize="13" 
                       Foreground="#2C3E50"
                       Margin="0,0,0,6"/>

            <PasswordBox x:Name="PasswordBox"
                         Style="{StaticResource ModernPasswordBox}"
                         Margin="0,0,0,30"/>

            <!-- Login Button -->
            <Button Content="Login" 
                    Style="{StaticResource ModernButton}"
                    Click="LoginButton_Click"/>

            <!-- Forgot Password Link -->
            <TextBlock Margin="0,16,0,0" 
                       HorizontalAlignment="Center">
                <Hyperlink Foreground="#7F8C8D" 
                          TextDecorations="None"
                          Click="ForgotPassword_Click">
                    Forgot password?
                </Hyperlink>
            </TextBlock>

        </StackPanel>

        <!-- Footer -->
        <TextBlock Text="© 2025 OptiTrack. All rights reserved." 
                   FontSize="11" 
                   Foreground="#95A5A6"
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Bottom" 
                   Margin="0,0,0,20"/>
    </Grid>
</Window>
